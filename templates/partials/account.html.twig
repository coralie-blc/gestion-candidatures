{% extends 'base.html.twig' %}

{% block title %}Gestionnaire de Candidatures{% endblock %}

{% block body %}
  <div class="edit-form">
      <h4 class="text-shadow">Données personnelles.</h4>
      <form action="{{ path('app_account') }}" method="post" class="row justify-content-center mt-5">
        {# <input type="hidden" name="candidature_id" value="{{ candidature.id }}"> #}
        {# <input type="hidden" name="token" value="{{ csrf_token('archive-candidature') }}"/>    #}
        {{ form_start(form)}}
        <div class="col-md-8">
          {{ form_widget(form.email) }}
          {{ form_help(form.email) }}
        </div>
        <div class="col-md-8">
          {{ form_widget(form.firstName) }}
          {{ form_help(form.firstName) }}
        </div>
        <div class="col-md-8">
          {{ form_widget(form.lastName) }}
          {{ form_help(form.lastName) }}
        </div>
        <div class="col-md-8">
          {{ form_widget(form.zipCode) }}
          {{ form_help(form.zipCode) }}
        </div>
        <div class="col-md-8">
          {{ form_widget(form.city) }}
          {{ form_help(form.city) }}
        </div>

        <div class="col-md-8">
          <hr>
          <small>Préférences de relance:</small>
        </div>

  <div class="col-md-8 mt-2">
    {{ form_widget(form.relance) }}
    {{ form_help(form.relance) }}
  </div>

  {% if app.user %}
    {% if app.user.relance is same as (true) %}
    <div class="col-md-8 mt-2">
      {{ form_widget(form.relanceDays) }}
      {{ form_help(form.relanceDays) }}
    </div>
    {% endif %}

    {% if app.user.relance is same as (false) %}
    <div class="col-md-8 mt-2 relance-off">
      {{ form_widget(form.relanceDays) }}
      {{ form_help(form.relanceDays) }}
    </div>
    {% endif %}
  {% endif %}

        <div class="d-flex form-group col-md-8 justify-content-center mt-2"> 
          <button type="submit" id="btn-add-review" class="btn btn-outline-success">Modifier !</button>
        </div>
      {{ form_end(form)}}
    </form>
  </div>
{% endblock %}
